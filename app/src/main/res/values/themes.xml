<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>




<!--STYLE BUTTON-->

    <style  name="AppTheme.btn_select" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/col_blue_select</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style  name="AppTheme.btn_insert" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/col_green_insert</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style  name="AppTheme.btn_update" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/col_yellow_update</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style  name="AppTheme.btn_delete" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/col_red_delete</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style  name="AppTheme.btn_search" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/blue_search</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>




    <style  name="AppTheme.btn_retrun" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/col_gray_retrun</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!--STYLE BUTTON-->

    <!--STYLE label-->
    <style  name="label_head_tital" parent="Widget.AppCompat.TextView">
        <item name="backgroundTint">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style  name="label_topic" parent="Widget.AppCompat.TextView">
        <item name="backgroundTint">#3C010000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style  name="label_content" parent="Widget.AppCompat.TextView">
        <item name="backgroundTint">#000000</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!--STYLE label-->

    <!--STYLE TextEdit-->
    <style  name="text_read_only" parent="Widget.AppCompat.EditText">
        <item name="color">#000000</item>
        <item name="android:background">@color/yellow_retrun</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--STYLE TextEdit-->
    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>